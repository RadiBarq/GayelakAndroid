<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gayelak.gayelakandroid.WelcomeActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="background-pciture"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/welcome_background" />

    <Button
        android:id="@+id/facebookButton"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:background="@drawable/facebook_button_bg_rounded_corners"
        android:fontFamily="sans-serif-condensed"
        android:text="دخول فيسبوك"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/userName"

        app:layout_constraintRight_toRightOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <Button
        android:id="@+id/loginButton"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:background="@drawable/login_button_bg_rounded_corners"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClickLogin"
        android:text="تسجيل الخول"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/userName"
        app:layout_constraintRight_toRightOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@+id/facebookButton" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/droid_sans"
        android:text="Buy and sell locally with an easy experience "
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="67dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/droid_sans_bold"
        android:text="Gayelak"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="@id/userName"
        app:layout_constraintRight_toRightOf="@id/userName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/registerTextVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClickRegister"
        android:text="التسجيل"
        android:textColor="@android:color/background_light"
        android:textSize="21sp"
        app:layout_constraintLeft_toLeftOf="@id/userName"
        app:layout_constraintRight_toRightOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"


        />
</android.support.constraint.ConstraintLayout>
